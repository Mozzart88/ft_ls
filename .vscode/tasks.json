{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"-Wall",
				"-Wextra",
				"-Werror",
				"${workspaceFolder}/${relativeFile}",
				"-o",
				"-ltermcap",
				"${workspaceFolder}/${relativeFileDirname}/a.out"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "gcc build active folder",
			"command": "${workspaceFolder}/.vscode/compile.sh",
			"args": [
				"${workspaceFolder}/${relativeFileDirname}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "gcc build project",
			"command": "${workspaceFolder}/.vscode/compile.sh",
			"args": [
				"${workspaceFolder}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Build whith make",
			"command": "make",
			"args": [
				"-C",
				"${workspaceFolder}",
				"CC=clang",
				"DEBUG=1"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Build whith remake",
			"command": "make",
			"args": [
				"-C",
				"${workspaceFolder}",
				"CC=clang",
				"DEBUG=1",
				"re"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
